# 🔧 Configuración general
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5000

# 🔐 JWT
JWT_SECRET=tu-clave-supersecreta
JWT_EXPIRE=30d

# 🗄️ MongoDB
MONGO_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/db

# 📧 Email SMTP (si usas envío de correos)
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USER=tu-email@dominio.com
EMAIL_PASSWORD=tu-contraseña
EMAIL_FROM=no-reply@abexsl.es

# 🔐 Clave de cifrado
ENCRYPTION_KEY=clave-ultra-secreta-para-cifrar

# 📊 Retención de datos (puedes dejarla así si no sabes aún)
DATA_RETENTION_PERIOD=5y

# 🏢 Microsoft Graph / SharePoint
SHAREPOINT_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SHAREPOINT_CLIENT_SECRET=tu-client-secret
SHAREPOINT_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SHAREPOINT_SITE_URL=https://tuempresa.sharepoint.com/sites/miSitio
